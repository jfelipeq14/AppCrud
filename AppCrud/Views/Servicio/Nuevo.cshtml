@{
}
@model AppCrud.Models.Servicio
<div class="row">
	<div class="col-sm-8 offset-sm-2">

		<h2>
			Nuevo Servicio
		</h2>
		<form class="row" asp-controller="Servicio" asp-action="Nuevo" method="post">
			
			<label class="my-2 col-6">
				Nombre
				<input type="type" asp-for="Nombre" class="form-control" />
			</label>
			<label class="my-2 col-6">
				Categoria
				<input type="type" asp-for="Categoria" class="form-control" />
			</label>
			
			
			<label class="my-2 col-12">
				Activo
				<input type="checkbox" asp-for="Estado" class="form-check-input" />
			</label>
			<div class="my-2 col-12">
				<button type="submit" class="btn btn-primary">Guardar</button>
				<a asp-controller="Servicio" asp-action="Lista" class="btn btn-warning">Volver</a>
			</div>
			
		</form>

	</div>
</div>