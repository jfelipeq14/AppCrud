@model List<AppCrud.Models.Servicio>;

    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <h2>Lista de servicios</h2>
        <a asp-controller="Servicio" asp-action="Nuevo" class="btn btn-success my-2">Crear servicio</a>
            <table class="table table-bordered">
                <thead >
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Categoria</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        <th>@item.IdServicio</th>
                        <th>@item.Nombre</th>
                        <th>@item.Categoria</th>
                        <th>@(item.Estado ? "Activo" : "No activo")</th>
                        <th><td>
						<a
							asp-controller="Servicio"
							asp-action="Editar"
IdServicio					asp-route-id="@item.IdServicio"
							class="btn btn-primary"
						>Editar</a>
						<a
							asp-controller="Servicio"
							asp-action="Eliminar"
							asp-route-id="@item.IdServicio"
							onclick="return confirmar()"
							class="btn btn-danger"
						>Eliminar</a>
					</td>
</th>
                        
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @section Scripts{
	<script>
		function confirmar(){
			return confirm("¿Esta seguro que desea eliminar el cliente?")
		}
	</script>
}